<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hc.frament.HomeFragment">

    <RelativeLayout
        android:id="@+id/frm_home_rl"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/beijinghome"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/frm_home_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frm_home_rl"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/frg_home_host"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="#5ec9b4"
                android:text="主机"
                android:textColor="@color/colorWhite"
                android:layout_margin="10dp"
                android:textSize="20dp" />
            <Button
                android:id="@+id/frg_home_shebei"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="#5ec9b4"
                android:text="设备"
                android:layout_margin="10dp"

                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frm_home_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frm_home_rl1"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主机数量：3"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/tetb"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:background="@drawable/tetb"
                    android:text="分机数量：6"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frm_home_rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frm_home_rl2"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灯杆数量：50"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"

                    android:background="@drawable/tetb"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:background="@drawable/tetb"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="分组数量：17"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

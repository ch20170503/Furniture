<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/login_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户登录"
                android:gravity="center"
                android:textSize="20dp"/>
            <LinearLayout
                android:id="@+id/login_LlIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
                <EditText
                    android:id="@+id/login_etIp"
                    android:drawablePadding="20dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:text="http://iot-leyview.com:8011"
                    android:singleLine="true"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_LlName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_LlIP"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <EditText
                    android:id="@+id/login_etName"
                    android:drawablePadding="20dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:maxLength="16"
                    android:textSize="20dp"
                    android:hint="用户名"
                    android:singleLine="true"
                    android:background="@drawable/shape_textarea"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_LlPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_LlName"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp">
                <EditText
                    android:id="@+id/login_etPwd"
                    android:drawablePadding="20dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:maxLength="16"
                    android:textSize="20dp"
                    android:singleLine="true"
                    android:password="true"
                    android:hint="密码"
                    android:background="@drawable/shape_textarea"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_Llbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_LlPwd"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <Button
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_style"
                    android:text="登陆" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hc.personalInfo.PersonalaActivity">
    <RelativeLayout
        android:id="@+id/geren_1"
        android:layout_width="match_parent"
        android:background="#AEDFFF"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/backuser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textSize="20dp"
                android:gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/geren_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/geren_1"
        android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="账号："
                android:gravity="center"
                android:background="#AEDFFF"
            />
            <TextView
                android:id="@+id/org_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/geren_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/geren_2"
        android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="姓名："
                android:gravity="center"
                android:background="#AEDFFF"
                />
            <TextView
                android:id="@+id/xingming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/geren_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/geren_3"
        android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="昵称："
                android:gravity="center"
                android:background="#AEDFFF"
                />
            <TextView
                android:id="@+id/nicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/geren_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/geren_4"
        android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="邮箱："
                android:gravity="center"
                android:background="#AEDFFF"
                />
            <TextView
                android:id="@+id/youxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/geren_6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/geren_5"
        android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="性别："
                android:gravity="center"
                android:background="#AEDFFF"
                />
            <TextView
                android:id="@+id/xingbie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/geren_7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/geren_6"
        android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="创建时间："
                android:gravity="center"
                android:background="#AEDFFF"
                />
            <TextView
                android:id="@+id/chuangjianshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:textColor="#f000" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>